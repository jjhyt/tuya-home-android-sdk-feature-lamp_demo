<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lamp">

    <include layout="@layout/merge_lamp_layout" />

    <FrameLayout
        android:id="@+id/fl_lamp_white_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:visibility="visible">
        <include layout="@layout/merge_lamp_color_layout" />
        <LinearLayout
            android:id="@+id/ll_lamp_bottom_operation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_50"
            android:layout_gravity="bottom"
            android:background="#19000000"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ty_lamp_up_arrow" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/ll_lamp_color_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="220dp"
            android:columnCount="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:rowCount="2"
            android:visibility="visible">

            <TextView
                android:id="@+id/button_scene_1"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="18dp"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:clickable="true"
                android:background="@color/orange_58"
                android:text="scene_1"/>

            <TextView
                android:id="@+id/button_scene_2"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:clickable="true"
                android:background="@color/orange_58"
                android:text="scene_2" />

            <TextView
                android:id="@+id/button_scene_3"
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_row="0"
                android:layout_column="2"
                android:gravity="center"
                android:clickable="true"
                android:background="@color/orange_58"
                android:text="scene_3" />
        </GridLayout>

    </FrameLayout>

</RelativeLayout>
